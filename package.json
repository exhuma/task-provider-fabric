{
  "name": "task-provider-fabric",
  "author": {
    "name": "Michel Albert",
    "email": "michel@albert.lu"
  },
  "publisher": "MichelAlbert",
  "bugs": {
    "url": "https://github.com/exhuma/task-provider-fabric/issues"
  },
  "homepage": "https://github.com/exhuma/task-provider-fabric",
  "license": "MIT",
  "readme": "README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/exhuma/task-provider-fabric"
  },
  "displayName": "Task Provider for fabric",
  "description": "Allows running task defined in a fabfile directly from VS-Code",
  "version": "1.0.0-beta.1",
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#ffffff",
    "theme": "light"
  },
  "engines": {
    "vscode": "^1.56.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:workbench.action.tasks.runTask"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "taskDefinitions": [
      {
        "type": "fabric",
        "required": [
          "task"
        ],
        "properties": {
          "task": {
            "type": "string",
            "description": "The fabric task to customize"
          },
          "args": {
            "type": "array",
            "description": "Command line arguments"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.56.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "eslint": "^7.27.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  }
}
